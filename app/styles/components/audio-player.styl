player-height = 14px

#audio-player
  flexbox()
  transition margin-bottom .2s
  position fixed
  bottom 0
  left nav-width
  right 0
  &.visible
    margin-bottom 0

#details
  flex-shrink(0)
  flexbox()
  flex-direction(column)
  align-items(center)
  width nav-width
  position fixed
  left 0
  bottom 0
  background-color rgba(black, .5)
  color white
  font-weight 100
  text-align center
  img
    height nav-width - 20px
    width @height
  #details-track-title
    padding 11px

#controls
  flexbox()
  flex-shrink(0)
  align-items(center)
  justify-content(space-around)
  width 80px
  height player-height
  padding padding
  background-color rgba(200, 200, 200, .7)
  [class^="icon-"]
    cursor pointer
  .icon-previous, .icon-next
    font-size 24px
  .icon-play, .icon-pause
    font-size 34px


#progress
  flexbox()
  flex-grow(1)
  align-items(center)
  height player-height
  padding padding
  background-color rgba(200, 200, 200, .7)
  .time, .duration
    flex-shrink(0)
    width 35px
    font-size 12px
  .duration
    text-align right

#progress-indicator-wrap
  flex-grow(1)

#progress-indicator
  width 0
  background-color black
  height 2px
