#release
  h1
    margin 15px 0 20px 0
    font-size 32px
    line-height 34px

  .artist, .year, .label, .format, .genre, .track-position
    font-family 'Volkhov', serif
    text-transform uppercase
    font-style inherit
    font-weight 600

  .artist
    font-size 14px
  .year
    font-size 18px
  .label
    font-size 11px
  .format
    font-size 13px
  .genre
    font-size 10px
    background-color black
    margin-right 2px
    padding 2px
    letter-spacing .5px
    text-decoration none
    color white

  #tracks
    margin 50px 0 0
