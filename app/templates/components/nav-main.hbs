{{#link-to 'index'}}
  <h1>
    The Collection of
    <br>
    James Alfred Duncalfe
  </h1>
{{/link-to}}

<ul id="first-tier">
  {{#link-to 'index'}}<li>All Albums</li>{{/link-to}}
  <li {{action (action this.attrs.randomRelease)}}>Random Album</li>
  <li>
    <div {{action 'show' 'genres'}}>By Genre</div>
    {{#if showGenres}}
      <ul class="second-tier">
        {{#each genres as |genre|}}
          <li>{{#link-to 'genre' genre.slug}}{{genre.id}}{{/link-to}}</li>
        {{/each}}
      </ul>
    {{/if}}
  </li>
  <li>
    <div {{action 'show' 'years'}}>By Year</div>
    {{#if showYears}}
      <ul class="second-tier">
        {{#each years as |year|}}
          <li>{{#link-to 'year' year}}{{year}}{{/link-to}}</li>
        {{/each}}
      </ul>
    {{/if}}
  </li>
</ul>
