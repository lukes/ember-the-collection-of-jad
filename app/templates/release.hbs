<div id="release">
  <h1>{{model.title}}</h1>

  {{#if model.year}}
    <div class="year">{{model.year}}</div>
  {{/if}}

  <div class="artist">{{model.artist}}</div>

  {{#if model.format}}
    <div class="format">{{model.format}}</div>
  {{/if}}

  {{#if model.label}}
    <div class="label">
      {{model.label}} {{#if model.catno}}({{model.catno}}){{/if}}
    </div>
  {{/if}}

  {{#each model.genres as |genre|}}
    {{#link-to 'genre' genre.slug class='genre'}}{{genre.id}}{{/link-to}}
  {{/each}}

  <div id="tracks" class="pure-g">
    <div class="pure-u-1-1 pure-u-md-1-2">
      {{#each model.aSideTracks as |track|}}
        {{track-details track=track}}
      {{/each}}
    </div>
    <div class="pure-u-1-1 pure-u-md-1-2">
      {{#each model.bSideTracks as |track|}}
        {{track-details track=track}}
      {{/each}}
    </div>
  </div>
  {{outlet}}
</div>
