<div id="release">

  <img src="{{model.coverImage}}">
  <img src="{{model.backImage}}">

  <h1>{{model.title}}</h1>

  <div class="artist">{{model.artist}}</div>

  {{#if model.year}}
    <div class="year">{{model.year}}</div>
  {{/if}}

  <div id="tracks" class="pure-g">
    <div class="pure-u-1-1 pure-u-md-1-2">
      {{#each model.aSideTracks as |track|}}
        {{track-details track=track}}
      {{/each}}
    </div>
    <div class="pure-u-1-1 pure-u-md-1-2">
      {{#each model.bSideTracks as |track|}}
        {{track-details track=track}}
      {{/each}}
    </div>
  </div>
  {{outlet}}
</div>
